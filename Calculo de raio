{
    class Program
    {
        static void Main(string[] args)
        {
            double raio, area;
            Console.WriteLine("Digite o raio:");
            raio = double.Parse(Console.ReadLine());
            area = Math.Pow(raio, 2) * Math.PI;
            Console.WriteLine("Area:" + area.ToString("F2"));
            Console.ReadLine();
          
     
        }
    }
}
